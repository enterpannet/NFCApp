<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="#FAFAFA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Card ID Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <ImageView
                android:id="@+id/iv_media_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="8dp"
                android:scaleType="centerInside"
                android:src="@android:drawable/ic_menu_info_details" />

            <TextView
                android:id="@+id/tv_card_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="UID: 04003EFF8B61D180"
                android:textStyle="bold"
                android:textSize="14sp"
                android:fontFamily="monospace"
                android:textColor="#212121" />

        </LinearLayout>

        <!-- Media Type -->
        <TextView
            android:id="@+id/tv_media_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📄 PDF Document"
            android:textSize="12sp"
            android:textColor="#4CAF50"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <!-- Media Path -->
        <TextView
            android:id="@+id/tv_media_path"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="/storage/emulated/0/Download/pdf/sample.pdf"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginBottom="12dp"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/btn_test"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="▶ ทดสอบ"
                android:textSize="11sp"
                android:backgroundTint="#2196F3"
                android:textColor="@android:color/white"
                android:layout_marginEnd="4dp"
                android:minWidth="0dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp" />

            <Button
                android:id="@+id/btn_edit"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="✏ แก้ไข"
                android:textSize="11sp"
                android:backgroundTint="#FF9800"
                android:textColor="@android:color/white"
                android:layout_marginEnd="4dp"
                android:minWidth="0dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp" />

            <Button
                android:id="@+id/btn_delete"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="🗑 ลบ"
                android:textSize="11sp"
                android:backgroundTint="#F44336"
                android:textColor="@android:color/white"
                android:minWidth="0dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView> 